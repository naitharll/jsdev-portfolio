                name="subject"
                class="w-full px-4 py-2 border border-light-300 dark:border-dark-300 rounded-lg bg-light-200 dark:bg-dark-200 focus:outline-none focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400 transition-colors"
