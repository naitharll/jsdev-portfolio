---

<section id="projects" class="py-12 sm:py-16 md:py-20 bg-light-200 dark:bg-dark-200 transition-colors duration-300">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold font-heading mb-8 sm:mb-12 text-center">
      My <span class="text-primary-600 dark:text-primary-400">Projects</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8 lg:gap-12">
      {projects.map((project, index) => (
        <div class="bg-light-100 dark:bg-dark-100 rounded-xl overflow-hidden shadow-lg transform transition-all duration-500 hover:scale-[1.02] hover:shadow-xl flex flex-col h-full">
          <!-- Project image with responsive handling -->
          <div class="h-48 sm:h-56 md:h-64 bg-gradient-to-br {placeholderColors[index % placeholderColors.length]} flex items-center justify-center overflow-hidden">
            {project.image ? (
              <img 
                src={project.image} 
                alt={project.title} 
                width="600" 
                height="400" 
                class="w-full h-full object-cover" 
                loading={index < 2 ? "eager" : "lazy"} 
                decoding="async"
                fetchpriority={index < 2 ? "high" : "low"}
              />
            ) : (
              <div class="text-white text-lg sm:text-xl font-bold p-4 text-center">{project.title}</div>
            )}
          </div>

          <div class="p-4 sm:p-6 flex flex-col flex-grow">
            <h3 class="text-lg sm:text-xl font-bold mb-2 sm:mb-3">{project.title}</h3>
            <p class="text-dark-400 dark:text-light-400 mb-4 text-sm sm:text-base">{project.description}</p>
            
            <!-- Expandable details section -->
            <details class="mb-4 text-sm sm:text-base">
              <summary class="font-medium text-primary-600 dark:text-primary-400 cursor-pointer hover:text-primary-700 dark:hover:text-primary-300 transition-colors">
                View Project Details
              </summary>
              <div class="mt-3 pl-4 border-l-2 border-primary-200 dark:border-primary-800">
                <h4 class="font-medium mb-2">Overview</h4>
                <p class="text-dark-400 dark:text-light-400 mb-4">{project.longDescription}</p>
                
                <h4 class="font-medium mb-2">Technical Challenges</h4>
                <p class="text-dark-400 dark:text-light-400 mb-4">{project.challenges}</p>
              </div>
            </details>

            <!-- Technologies used -->
            <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-4 sm:mb-6">
              {project.technologies.map((tech) => (
                <span class="px-2 sm:px-3 py-1 bg-light-200 dark:bg-dark-300 rounded-full text-xs font-medium">
                  {tech}
                </span>
              ))}
            </div>

            <!-- Project links -->
            <div class="flex flex-wrap gap-3 sm:gap-4">
              <a 
                href={project.demoUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                class="px-3 sm:px-4 py-1.5 sm:py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors duration-300 text-xs sm:text-sm flex items-center"
                aria-label={`View live demo of ${project.title}`}
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 sm:h-4 sm:w-4 mr-1.5 sm:mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Live Demo
              </a>
              <a 
                href={project.codeUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                class="px-3 sm:px-4 py-1.5 sm:py-2 border border-primary-600 dark:border-primary-400 text-primary-600 dark:text-primary-400 hover:bg-primary-50 dark:hover:bg-dark-300 font-medium rounded-lg transition-colors duration-300 text-xs sm:text-sm flex items-center"
                aria-label={`View code for ${project.title} on GitHub`}
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 sm:h-4 sm:w-4 mr-1.5 sm:mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
