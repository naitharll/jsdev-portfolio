---
import ThemeToggle from './ThemeToggle.astro';
import { Icon } from 'phosphor-react';
---

<header class="fixed top-4 left-0 right-0 z-50 mx-auto max-w-4xl">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center bg-light-100/90 dark:bg-dark-100/90 backdrop-blur-md rounded-full shadow-lg border border-light-300 dark:border-dark-300 transition-colors duration-300">
    <a href="/" class="text-2xl font-bold font-heading text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors">
      <span class="inline-block animate-float">JS</span>Dev
    </a>

    <nav class="hidden md:flex items-center space-x-8">
      <a href="/about" class="font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">About</a>
      <a href="/skills" class="font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Skills</a>
      <a href="/projects" class="font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Projects</a>
      <a href="/contact" class="font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Contact</a>
    </nav>

    <div class="flex items-center space-x-4">
      <ThemeToggle />

      <button id="mobile-menu-button" class="md:hidden text-dark-100 dark:text-light-100 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden mt-2 mx-auto max-w-sm">
    <div class="container mx-auto px-4 py-4 flex flex-col space-y-4 bg-light-100/90 dark:bg-dark-100/90 backdrop-blur-md rounded-2xl shadow-lg border border-light-300 dark:border-dark-300 transition-colors duration-300">
      <a href="/about" class="font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">About</a>
      <a href="/skills" class="font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Skills</a>
      <a href="/projects" class="font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Projects</a>
      <a href="/contact" class="font-medium hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Contact</a>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
